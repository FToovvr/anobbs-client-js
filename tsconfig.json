{
    "compilerOptions": {
        "rootDir": "src",
        // https://stackoverflow.com/a/67371788
        // for Node.js 16
        "module": "CommonJS",
        "moduleResolution": "node",
        "target": "ES2020",
        "lib": [
            "ES2020",
        ],
        "esModuleInterop": true,
        // misc
        "declaration": true,
        "outDir": "dist",
        "strict": true,
        "downlevelIteration": true,
        "noImplicitAny": true,
    },
    "include": [
        "src",
    ],
    "exclude": [
        "node_modules",
        "**/__tests__/*",
    ],
}